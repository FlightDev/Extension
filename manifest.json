{
    "name": "mantissa",
    "version": "1.0",
    "description": "EVEN for you",
    "permissions": ["webRequest", "activeTab", "declarativeContent", "storage", "https://www.amazon.com/"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
        "default_icon": "images/16.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["https://*.amazon.com/*"],
          "include_globs": ["*qid*"],
          "css": ["content.css"],
          "js": ["content.js"]
        },
        {
            "matches": ["https://*.amazon.com/*"],
            "include_globs": ["*qid*"],
            "css": ["content.css"],
            "js": ["contentScript.js"],
            "run_at": "document_start"
          }
    ],
    "web_accessible_resources": ["injected.js"],
    "options_page": "options.html",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "manifest_version": 2
}